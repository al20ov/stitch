using Gtk 4.0;
using Adw 1;

template $stitch_window: Adw.ApplicationWindow {
  default-width: 800;
  default-height: 600;
  title: _("Stitch");

  content: Adw.ToastOverlay toast_overlay {
    Overlay {
      Fixed fixed {}

      [overlay]
      Button {
        label: _("Save");
        halign: end;
        valign: start;
        margin-top: 12;
        margin-end: 12;

        styles [
          "suggested-action",
        ]

        clicked => $on_save_clicked();
      }
    }
  };
}
